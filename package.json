{
  "name": "@diva.exchange/diva",
  "version": "0.1.0",
  "description": "diva - Distributed value exchange upholding security, reliability and privacy",
  "keywords": [
    "distributed",
    "value",
    "exchange",
    "crypto",
    "asset"
  ],
  "author": "Konrad Baechler <konrad@diva.exchange> (https://diva.exchange)",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://codeberg.org/diva.exchange/diva.git"
  },
  "scripts": {
    "lint": "eslint --fix app/src ; exit 0",
    "css-build": "node-sass --omit-source-map-url --output-style compressed app/static/sass/diva.scss app/static/css/diva.min.css",
    "install": "node -r esm app/install",
    "start": "pm2 start ecosystem.config.js",
    "stop": "pm2 stop ecosystem.config.js",
    "test": "rm -rf app/test/data/session ; nyc mocha"
  },
  "dependencies": {
    "@diva.exchange/diva-logger": "^1.0.0",
    "better-sqlite3": "^7.1.2",
    "bignumber.js": "^9.0.1",
    "compression": "^1.7.4",
    "dateformat": "^4.4.1",
    "esm": "^3.2.25",
    "express": "~4.17.1",
    "express-session": "^1.17.1",
    "fs-extra": "^9.0.1",
    "grpc": "^1.24.4",
    "http-errors": "~1.8.0",
    "iroha-helpers": "^0.9.1",
    "nanoid": "^3.1.20",
    "pg": "^8.5.1",
    "pug": "^3.0.0",
    "request-promise-native": "^1.0.9",
    "simple-get": "^4.0.0",
    "socks-proxy-agent": "^5.0.0",
    "sodium-native": "^3.2.0",
    "ws": "^7.4.1"
  },
  "devDependencies": {
    "acorn": ">=8.0.4",
    "bulma": "^0.9.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.16.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "minimist": ">=1.2.5",
    "mocha": "^8.2.1",
    "node-sass": "^5.0.0",
    "npm-check-updates": "^10.2.5",
    "nyc": "^15.1.0",
    "pino-pretty": "^4.3.0",
    "umbrellajs": "^3.2.3"
  },
  "peerDependencies": {
    "pm2": "^4.5.1"
  },
  "mocha": {
    "require": [
      "esm"
    ],
    "spec": "app/test/**/*.spec.js"
  },
  "nyc": {
    "reporter": [
      "html",
      "text-summary"
    ],
    "include": [
      "app/src/**/*.js"
    ]
  }
}
